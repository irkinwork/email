@import url('https://fonts.googleapis.com/css?family=Roboto');
body
    margin 0 !important
    padding 0
    background-color #ffffff
    width:100%
    margin: 0 auto
    background: #F7F7F7
    font-family: Arial;
    box-sizing: border-box

table
    border-spacing 0
    font-family sans-serif
    color #333333
    width:100%

img
    border 0
    max-width 100%

.wrapper
    width 100%
    table-layout fixed
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
    margin: 0 auto

.container
  max-width 600px
  width 100%
  margin 0 auto
  display: table;

generate-grid(end)
  for x in 1..end
    .col-{x}
      width ((x*100)/end)+'%';
      padding 0 2.5%;

generate-grid(12)


/***===========================common start==========================**/
.content-wrap
  padding 30px 2.5% 11px

.spacer-table
  background-color: #ffffff

  td
    padding-left: (22/6)+'%'
  td.pic
    padding-left: 0

.spacer
  width: 100%
  opacity: 0.05;
  border-top: 1px solid #000000;
  margin 0

.spacer-td
  td
    padding 14px 0 4px
.spacer-td2
  td
    padding 7px 0 11px
.gray
  opacity: 0.3;
.right
  text-align: right;

.blue
  color #0086E6  

/**========================common end=========================***/
/**========================header start=========================***/
.mail
  &__header
    background-color: #0086E6
    padding: 20px 2.5%;
    td
      padding 0 2.5%
/**========================header end=========================***/
/**========================hello start=========================***/
.mail
  &__hello
    padding: 10px 2.5%;
    background-color: #ffffff
    box-shadow: 0px 4px 25px rgba(0, 0, 0, 0.1);
    td
      &.check
        padding 0 2.5%
      &.hola
        padding: 8px 0.5% 0
        letter-spacing: 1px;
        line-height: 12px;
      &.confirm
        line-height: 20px;
        font-size: 14px;
        padding: 0px 0.5% 0
/**========================hello end=========================***/

/**========================content-main start=========================***/
.inner-top
  padding 0px 2.5%
.content-main
  box-shadow: 0px 4px 25px rgba(0, 0, 0, 0.1);
  max-width: 540px;

.content-top
  padding 24px 3.5% 0
  background-color: #ffffff
  .pic
    //padding-right (22/6)+'%'
    padding-right 0
    width 41%
  .title
    line-height: 18px;
    font-size: 18px;
    letter-spacing: 0.5px;
    padding: 0 0 0 0;
  .desc
    color: #000000;
    opacity: 0.3;
    line-height: 21px;
    font-size: 14px;
    padding 0 0 0 0
  .help
    font-family: Roboto;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    font-size: 14px;
    color: #000000;
    mix-blend-mode: normal;
    font-weight: 600;
    .time
      width 23px
      
    .lang
      width 23px
      padding 7px 3px 7px 0
    img 
      padding-right (22/6)+'%'

.content-middle
  padding 0 3.5% 1.8%
  background-color: #ffffff
.info
  line-height: 38px;
  font-size: 14px;
  text-align: left;
  color: #000000;
.total
  line-height: 25px;
  font-size: 18px;
  .price
    color #0086E6
    padding 0px 0 11px 0
  .total-text
    padding 8px 0 20px

.title-inner
  max-width: 540px;
  td
    padding: 46px 0 17px
    line-height: 25px;
    font-size: 18px;

/**========================content-main end=========================***/


/**========================title-inner start=========================***/
.title-inner
  background-color transparent
  max-width: 540px;

/**========================title-inner end=========================***/

/**========================content-bottom end=========================***/

.content-bottom
  padding 15px 3.5%
  background-color: #ffffff
  box-shadow: 0px 4px 25px rgba(0, 0, 0, 0.1);
  max-width: 540px;

/**========================content-bottom end=========================***/


/**========================message start=========================***/
.message
  td
    padding: 33px (58/6)+'%' 0
    line-height: 20px;
    font-size: 14px;
    text-align: center;

/**========================message end=========================***/

/**========================footer start=========================***/
table
  &.footer
    background-color: #0086E6
    border: 0.5px solid #FFFFFF;
    td
      line-height: 23px;
      font-size: 16px;
      color: #FFFFFF;
      text-align: center
      padding 19px 0
      font-weight: 500
      letter-spacing: 0.05em;


/**========================footer end=========================***/


